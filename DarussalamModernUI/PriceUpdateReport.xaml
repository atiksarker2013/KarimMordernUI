                  Style="{StaticResource BlankWindow}"
                  WindowStartupLocation="CenterScreen"
                  WindowState="Maximized">
    <Grid Style="{StaticResource ContentRoot}">
        <ScrollViewer>
            <StackPanel>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />

                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="550" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />

                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0"
                               Grid.Column="0"
                               Style="{StaticResource Heading2}"
                               Text="Entry Date  "
                               TextAlignment="Right" />
                    <DatePicker Name="fromDateDatepicker"
                                Grid.Row="0"
                                Grid.Column="1" />
                    <TextBlock Grid.Row="0"
                               Grid.Column="2"
                               Style="{StaticResource Heading2}"
                               Text="To Date  "
                               TextAlignment="Right" />
                    <DatePicker Name="toDateDatepicker"
                                Grid.Row="0"
                                Grid.Column="3" />
                    <Button Name="bookSearchButton"
                            Grid.Row="1"
                            Grid.Column="3"
                            Margin="0,0,131,0"
                            Click="bookSearchButton_Click"
                            Content="Book Search" />
                    <Grid Grid.Row="2"
                          Grid.Column="0"
                          Grid.ColumnSpan="4">

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>




                    </Grid>
                    <Grid Grid.Row="4"
                          Grid.Column="0"
                          Grid.ColumnSpan="4">
                        <DataGrid Name="posDatagrid"
                                  AutoGenerateColumns="False"
                                  IsReadOnly="True">
                            <DataGrid.Resources>
                                <Style TargetType="{x:Type DataGridColumnHeader}">
                                    <Setter Property="HorizontalContentAlignment" Value="Center" />
                                </Style>
                            </DataGrid.Resources>
                            <DataGrid.Columns>
                                <DataGridTextColumn Width="100"
                                                    Binding="{Binding Path=UpdateDate}"
                                                    Header="Update Date" />
                                <DataGridTextColumn Width="400"
                                                    Binding="{Binding Path=Title}"
                                                    Header="Title" />
                                <DataGridTextColumn Width="200"
                                                    Binding="{Binding Path=Writer}"
                                                    Header="Writer" />
                                <DataGridTextColumn Width="100"
                                                    Binding="{Binding Path=Publisher}"
                                                    Header="Publisher" />
                                <DataGridTextColumn Width="150"
                                                    Binding="{Binding Path=OldPrice}"
                                                    Header="Old Price" />
                                <DataGridTextColumn Width="150"
                                                    Binding="{Binding Path=NewPrice}"
                                                    Header="New Price" />


                            </DataGrid.Columns>
                        </DataGrid>

                    </Grid>

                    <Grid Grid.Row="7"
                          Grid.Column="0"
                          Grid.ColumnSpan="4">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="250" />
                            <ColumnDefinition Width="600" />
                            <ColumnDefinition Width="123" />
                            <ColumnDefinition Width="277" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0"
                              Grid.RowSpan="5"
                              Grid.Column="1" />

                    </Grid>

                    <StackPanel Grid.Row="8"
                                Grid.Column="3"
                                Orientation="Horizontal">
                        <Button Name="previewButton"
                                Click="previewButton_Click"
                                Content="Preview" />
                        <Button Name="closeButton"
                                Click="closeButton_Click"
                                Content="Close" />
                    </StackPanel>

                </Grid>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</mui:ModernWindow>
